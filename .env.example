# FastAPI Boilerplate Environment Configuration
# Copy this file to .env and modify as needed

# Debug
DEBUG=true

# Database
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost/fastapi-boilerplate

# Security - Password salt for hashing
PASSWORD_SALT=Momoyeyu

# JWT Configuration
JWT_SECRET=Momoyeyu
JWT_ALGORITHM=HS256
JWT_EXPIRE_SECONDS=3600

# Admin Account - Created on startup for Swagger testing
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin
