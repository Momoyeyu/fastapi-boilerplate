# ===========================================
# FastAPI Boilerplate - Environment Variables
# ===========================================
# Copy this file to .env and update the values
# for your environment.

# ===========================================
# Database Configuration
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=fastapi-boilerplate

# ===========================================
# Security Configuration
# IMPORTANT: Change these in production!
# ===========================================
PASSWORD_SALT=change-me-to-secure-random-string
JWT_SECRET=change-me-to-secure-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRE_SECONDS=3600

# ===========================================
# Admin Account
# IMPORTANT: Change these in production!
# ===========================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-to-secure-password

# ===========================================
# Application Settings
# ===========================================
DEBUG=false

# ===========================================
# Docker Image (used by CD pipeline)
# ===========================================
DOCKER_IMAGE=fastapi-boilerplate:latest
